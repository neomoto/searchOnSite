{
    "manifest_version": 2,
    "name": "Search within the site",
    "description": "This extension let you search on site with Google or Yandex search",
    "version": "1.0",
    "background": {"scripts": ["background.js"]},
    "icons": {
        "16": "./images/user_icon_template_16.png",
        "48": "./images/user_icon_template_48.png",
        "128": "./images/user_icon_template_128.png"
    },
    "permissions": ["tabs", "storage"],
    "page_action": {
        "default_icon": "./images/user_icon_template_19.png",
        "default_title": "Search within the site",
        "default_popup": "popup.html"
    }
}
